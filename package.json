{
  "name": "todo-app-playground",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all dev:apps",
    "dev:apps": "npm-run-all -p --continue-on-error dev:server dev:client",
    "dev:server": "npm --workspace apps/server run dev",
    "dev:client": "npm --workspace apps/client run dev",
    "clean": "npm-run-all clean:dist clean:tsbuildinfo clean:node_modules",
    "clean:dist": "rimraf dist apps/*/dist packages/*/dist",
    "clean:tsbuildinfo": "rimraf **/*.tsbuildinfo",
    "clean:node_modules": "rimraf node_modules apps/*/node_modules packages/*/node_modules",
    "typecheck": "tsc -b",
    "lint": "npm run typecheck",
    "build": "npm run build --workspaces --if-present",
    "db:start": "docker compose up postgres -d",
    "db:stop": "docker compose stop postgres",
    "db:clear": "docker compose down postgres && rimraf docker/db-data",
    "db:generate": "npm --workspace apps/server exec prisma generate",
    "db:migrate": "npm --workspace apps/server exec prisma migrate dev",
    "db:studio": "npm --workspace apps/server exec prisma studio",
    "upgrade": "npm-run-all upgrade:* && npm install",
    "upgrade:root": "ncu -u",
    "upgrade:server": "ncu -u --packageFile apps/server/package.json",
    "upgrade:client": "ncu -u --packageFile apps/client/package.json",
    "upgrade:shared": "ncu -u --packageFile packages/shared/package.json"
  },
  "devDependencies": {
    "npm-check-updates": "^19.1.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "24.11.0"
  }
}
